{
  "name": "movieframesnap-lite",
  "version": "1.0.0",
  "description": "動画の切り抜き＆画像抽出ツール（簡易版）",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf dist",
    "build": "npm run clean && electron-builder",
    "build:mac": "npm run clean && electron-builder --mac",
    "build:win": "npm run clean && electron-builder --win",
    "build:all": "npm run clean && electron-builder --mac --win"
  },
  "keywords": ["video", "frame", "extraction", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "ffmpeg-static": "^5.2.0"
  },
  "build": {
    "appId": "com.movieframesnap.lite",
    "productName": "MovieFrameSnap Lite",
    "electronVersion": "28.3.3",
    "files": [
      "main.js",
      "src/**/*",
      "icon.png",
      "package.json",
      "!**/*.md",
      "!create-icon.js",
      "!icon-*.png",
      "!test-*.js",
      "!run-*.js",
      "!run-*.html",
      "!screenshots/**/*",
      "!.gitignore",
      "!README.md"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*"
    ],
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.video",
      "target": ["dmg", "zip"],
      "icon": "icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
